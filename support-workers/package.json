{
  "name": "support-workers",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --group=-integration",
    "it-test": "jest --group=integration",
    "lint": "eslint src/typescript/**/*.ts",
    "lint:fix": "eslint --fix src/typescript/**/*.ts",
    "check-formatting": "prettier --check **.ts",
    "fix-formatting": "prettier --write **.ts",
    "fix": "pnpm fix-formatting && pnpm lint:fix",
    "build": "tsc --noEmit",
    "bundle": "node esbuild.config.mjs",
    "clean-target": "rm -rf target && mkdir -p target",
    "zip": "cd target/typescript && zip -r support-workers.zip ./* -x \".*\" -x \"__MACOSX\"",
    "bundle-and-zip": "pnpm clean-target && pnpm bundle && pnpm zip",
    "check-modules": "pnpm --filter modules check-formatting && pnpm --filter modules lint",
    "package": "pnpm check-modules && pnpm check-formatting && pnpm lint && pnpm build && pnpm test && pnpm bundle-and-zip",
    "deploy-to-code": "node deployToCode.mjs",
    "package-and-deploy": "pnpm package && pnpm deploy-to-code"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guardian/support-frontend.git"
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "catalog:",
    "@aws-sdk/client-eventbridge": "catalog:",
    "@aws-sdk/client-secrets-manager": "catalog:",
    "@aws-sdk/client-ssm": "catalog:",
    "@aws-sdk/credential-provider-node": "catalog:",
    "@aws-sdk/client-dynamodb": "catalog:",
    "@aws-sdk/util-dynamodb": "catalog:",
    "@aws-sdk/client-sqs": "catalog:",
    "@guardian/support-service-lambdas": "catalog:",
    "dayjs": "^1.11.13",
    "stripe": "^17.4.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@aws-sdk/client-lambda": "^3.876.0",
    "@aws-sdk/client-s3": "^3.876.0",
    "@guardian/prettier": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "esbuild": "catalog:",
    "esbuild-ts-paths": "^1.1.3",
    "jest": "catalog:",
    "jest-runner-groups": "catalog:",
    "prettier": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:"
  }
}
