{
  "compilerOptions": {
    "target": "ES2022",
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@modules/*": ["./modules/*"]
    }
  },
}
