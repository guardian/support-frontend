    "@guardian/tsconfig": "0.2.0",
    "@types/jest": "^29.5.4",
    "@types/node": "20.5.3",
    "eslint": "^8.48.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "^29.6.4",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "prettier": "@guardian/prettier",
  "eslintConfig": {
    "extends": "@guardian/eslint-config-typescript",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  }
